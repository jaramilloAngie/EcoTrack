<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6FB">

    <!-- Botón de volver -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="29dp"
        android:layout_height="30dp"
        android:layout_marginTop="45dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"/>

    <!-- Card del Perfil -->
    <LinearLayout
        android:id="@+id/cardPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/btnBack"
        android:background="#FFFFFF"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <!-- Foto de perfil -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_perfil"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:layout_marginBottom="8dp"
            android:contentDescription="@null"/>

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jaden"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp"/>

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jaden123@gmail.com"
            android:textSize="14sp"
            android:textColor="#A0A0A0"
            android:layout_marginTop="4dp"/>

        <!-- Puntos -->
        <TextView
            android:id="@+id/tvPuntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,000 Puntos"
            android:textSize="18sp"
            android:textColor="#0D7501"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <!-- Lista de opciones -->
    <LinearLayout
        android:id="@+id/listaOpciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/cardPerfil"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <!-- Texto: Todas las categorías -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todas las categorías"
            android:textSize="13sp"
            android:textColor="#A0A0A0"
            android:layout_marginBottom="12dp"/>

        <!-- Opción 1: Acerca de mi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_about"
                app:tint="#0D7501"
                android:layout_marginEnd="12dp"
                android:contentDescription="@null"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Acerca de mí"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="@null"
                app:tint="#000000"/>
        </LinearLayout>

        <!-- Opción 2: Membresía -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_membership"
                android:contentDescription="@null"
                app:tint="#0D7501"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Membresía"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="@null"
                app:tint="#000000"/>
        </LinearLayout>

        <!-- Opción 3: Mi dirección -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location"
                app:tint="#0D7501"
                android:layout_marginEnd="12dp"
                android:contentDescription="@null"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mi dirección"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="@null"
                app:tint="#000000"/>
        </LinearLayout>

        <!-- Opción 4: Versión -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_version"
                android:contentDescription="@null"
                app:tint="#0D7501"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Versión"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0.0"
                android:textSize="12sp"
                android:textColor="#A0A0A0"/>
        </LinearLayout>

        <!-- Sign Out -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sign_out"
                android:contentDescription="@null"
                app:tint="#FF0000"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign out"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FF0000"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Navegación inferior -->
    <FrameLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>