<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNav"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:weightSum="4"
    android:elevation="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/botonInicio"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_inicio"
            app:tint="#00FF00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:textColor="#000000"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/botonReciclado"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_reciclado"
            app:tint="#888888" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escanear"
            android:textSize="10sp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/botonRedimir"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_redimir"
            app:tint="#888888" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redimir"
            android:textSize="10sp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/botonPerfil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_perfil"
            app:tint="#888888" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textSize="10sp"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>
