<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Botón de regresar -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="4dp"
            android:contentDescription="@null"
            />

        <!-- Título Redimir -->
        <TextView
            android:id="@+id/titleRedimir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redimir"
            android:textSize="18sp"
            android:textColor="#0D7501"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <!-- Imagen del premio -->
        <ImageView
            android:id="@+id/rewardImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/titleRedimir"
            android:layout_marginTop="24dp"
            android:scaleType="fitCenter"
            android:background="@drawable/white_rounded_box"/>

        <!-- Nombre del premio -->
        <TextView
            android:id="@+id/rewardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del premio"
            android:textColor="#0D7501"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_below="@id/rewardImage"
            android:layout_marginTop="16dp"/>

        <!-- Puntos requeridos -->
        <TextView
            android:id="@+id/rewardPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10,000 Puntos"
            android:textColor="#0D7501"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_below="@id/rewardName"
            android:layout_marginTop="4dp"/>

        <!-- Descripción -->
        <TextView
            android:id="@+id/rewardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Tenemos buenas noticias! Ahora puedes canjear tus Puntos por un saldo de Gopay de tan solo IDR 10,000. ¡Date prisa y canjea tus Puntos  ya!"
            android:textColor="#4D4D4D"
            android:textSize="14sp"
            android:layout_below="@id/rewardPoints"
            android:layout_marginTop="12dp"/>

        <!-- Campo para número de cuenta o similar -->
        <EditText
            android:id="@+id/inputNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de cuenta o dato requerido"
            android:layout_below="@id/rewardDescription"
            android:layout_marginTop="16dp"
            android:background="@drawable/white_rounded_box"
            android:padding="12dp"
            android:textColorHint="#999999"
            android:textSize="14sp"/>

        <!-- Botón de Canjear -->
        <Button
            android:id="@+id/btnCanjear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Canjear"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0D7501"
            android:textStyle="bold"
            android:layout_below="@id/inputNumber"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/green_rounded_box" />
    </RelativeLayout>

</ScrollView>
