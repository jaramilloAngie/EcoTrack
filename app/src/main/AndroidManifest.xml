<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EcoTrackApp"
        tools:targetApi="31">

        <activity
            android:name=".PrincipalActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.EcoTrackApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividades personalizadas -->

        <activity android:name=".RedimirActivity" />
        <activity android:name=".RecicladoActivity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".BottomNavigationActivity"
            tools:ignore="Instantiatable" />
        <activity android:name=".AboutMeActivity" />
        <activity android:name=".VersionActivity" />
        <activity android:name=".DetailRewardActivity" />
        <activity android:name=".MyAddressActivity" />

    </application>

</manifest>